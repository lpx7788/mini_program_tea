page {
  padding: 0 34rpx;
  box-sizing: border-box;
}

.head {
  height: 200rpx;
  display: flex;
}

.head .avatar {
  display: flex;
  align-items: center;
  height: 100%;
}

.head .avatar image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.head .name {
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #101010;
  margin-left: 30rpx;
}

.body {
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.body image {
  width: 400rpx;
  height: 400rpx;
}

.foot {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #888;
  padding: 20rpx 0;
}

.foot text {
  line-height: 40rpx;
}
<!--pages/rate/rate1.wxml-->
<view class='flex line bb'>
  <view class='name'>真实姓名：</view>
  <view class='input'>
    <input placeholder='请输入你的真实姓名' bindinput='save' data-type="1" placeholder-class='placeholder'></input>
  </view>
</view>
<view class='flex line bb'>
  <view class='name'>联系电话：</view>
  <view class='input'>
    <input placeholder='请输入你的电话' bindinput='save' data-type="2"  placeholder-class='placeholder'></input>
  </view>
</view>
<view class='flex line bb'>
  <view class='name'>QQ/Email:</view>
  <view class='input'>
    <input placeholder='请输入你的QQ/Email' bindinput='save' data-type="3"  placeholder-class='placeholder'></input>
  </view>
</view>
<view class='flex line bb'>
  <view class='name'>微信号：</view>
  <view class='input'>
    <input placeholder='请输入你的微信号' bindinput='save' data-type="4"  placeholder-class='placeholder'></input>
  </view>
</view>
<view class='flex line bb'>
  <view class='name'>店铺信息：</view>
  <view class='radio-group'>
    <radio-group bindchange="save" data-type="7">
      <label class="radio">
        <radio value="1" checked /> 有
      </label>
      <label class="radio">
        <radio value="0" />无
      </label>
    </radio-group>
  </view>
</view>

<view class='text bb'>
  <view class='title'>店铺地址：</view>
  <textarea placeholder='详细信息' bindinput='save' data-type="5"  placeholder-class='placeholder'></textarea>
</view>
<view class='text bb'>
  <view class='title'>留言内容：</view>
  <textarea placeholder='留言内容' bindinput='save' data-type="6"  placeholder-class='placeholder'></textarea>
</view>

<button class='btn' catchtap='submit'>提交申请</button>
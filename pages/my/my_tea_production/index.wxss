.tea_production .flex {
  display: flex;
  align-items: center;
  flex-flow: row wrap;
  justify-content: center;
}

.tea_production .info {
  width: 100%;
  background-color: #fff;
}

.tea_production .uploadTime {

  padding: 0 30rpx;
  background-color: #fff;
  color: #999;
  height: 30rpx;
  font-size: 26rpx;
}

.tea_production .Title {
  line-height: 100rpx;
  border-bottom: 2rpx #eee solid;
  padding: 0 30rpx;
  margin-top: 16rpx;
  background-color: #fff;
}

.tea_production .Title .name {
  font-weight: bold;
  font-size: 34rpx;
  flex: 1;
  color:#3C3C3C;
}

.tea_production .Title .more {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #666;
}

.tea_production .info .content {
  background-color: #fff;
}


page {
  background: #F7F7F7;
}
.my_generalize .tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 30rpx;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  border-top: 2rpx solid #e5e5e5;

}

.my_generalize .tab-item {

  display: inline-block;
  width: 50%;
  text-align: center;
  
}

.my_generalize .item1 {
  background: #EEEEEE;
  text-align: center;
  height: 800rpx !important;
  
}

.my_generalize .active {
  color: #FFDA7F;
  position: relative;
  border-bottom: 2rpx solid  #FFDA7F;
}

.my_generalize .active::after {
  content: "";
  display: block;
  height: 4rpx;
  width: 100%;
  background: #FFDA7F;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  border-radius: 16rpx;

}

.my_generalize .item-ans image {
  margin: 0 auto;
  height: 280rpx;
  width: 280rpx;
}
.my_generalize .erCode{
  margin-top: 232rpx;
}
.my_generalize .erCodeText{
  width: 100%;
  margin-top: 10px;
}
.my_generalize .item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;

  box-sizing: border-box;

  align-items: center;
  border-bottom: 1px solid #F2F2F2;
}

.my_generalize .avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.my_generalize .avatar .img {
  width: 100%;
  height: 100%;
}

.my_generalize .avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.my_generalize .expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #B0B0B0;
  line-height: 1.5em;
}

.my_generalize .expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.my_generalize .askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675F9;
  color: #4675F9;
}

.my_generalize .tab-content {
  margin-top: 80rpx;
    
  padding:30rpt;
}

.my_generalize .step{
  font-size:24rpx;
  color:rgba(134,134,134,1);
  
  margin: 40rpx 30rpx;
}
.my_generalize .scoll-h {
  height: 100%;
}
.my_generalize .invited {
  background: #787878;
  height: 130rpx;
  line-height: 130rpx;
  text-align: center;
  font-size:32rpx;
  width: 100%;
  color: #fff;
  
}


.my_generalize .item_list.tit{
  color: #505050;
}
.my_generalize .item_list{
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #e5e5e5;

}
.my_generalize .item_list view{
  font-size: 30rpx;
  color: #A0A0A0;
}
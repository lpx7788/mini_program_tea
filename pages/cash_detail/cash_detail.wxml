<view class='section'>
  <view class='top'>
    <text class='tip'>提现金额（元)</text>
    <view class='money'>
      <text class='balance'>{{value.money}}</text>
      <text class='status'>提现{{value.status == 0?'审核中':(value.status == 1?'成功':'失败')}}</text>
    </view>
  </view>
  <view class='bottom'>
    <view class='item'>
      <text class='title'>申请提现</text>
      <text class='detail'>{{value.apply_time}}</text>
    </view>
    <view wx:if="{{value.status == 1}}" class='item'>
      <text class='title'>提现成功</text>
      <text class='detail'>{{value.succ_time}}</text>
    </view>
    <view wx:elif="{{value.status == 2}}" class='item'>
      <text class='title'>提现失败</text>
      <text class='detail'>{{value.err_time}}</text>
    </view>
    <view class='item'>
      <text class='title'>备注</text>
      <text class='detail'>{{value.remark?value.remark:''}}</text>
    </view>
  </view>
</view>
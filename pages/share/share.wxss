page {
  background: #F8F8F8;
}

.bg {
  height: 380rpx;
  background: #1E1A19;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}

.panel {
  background: #fff;
  position: relative;
  z-index: 9;
  border-radius: 14rpx;
  width: 670rpx;
  height: 904rpx;
  margin: 0 auto;
  margin-top: 262rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.panel .code {
  margin-top: 48rpx;
}

.panel .code image {
  width: 528rpx;
  height: 528rpx;
}

.panel .share-btn {
  width: 272rpx;
  height: 80rpx;
  border-radius: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  background: #1E1A19;
  margin-top: 32rpx;
}

.panel .tip {
  font-size: 24rpx;
  color: #888;
  margin-top: 38rpx;
}

.name {
  /* padding-top: 20rpx; */
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 0 30rpx;
}
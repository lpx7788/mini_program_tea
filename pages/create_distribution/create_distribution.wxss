page {
  background: #1E1A19;

  padding-bottom: 120rpx;
}

.bottom_box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 0;
  background: #fff;
  text-align: center;
  display: flex;
  align-items: center;
}

.bottom_box button {
  display: inline-block;
  border: 1px solid #fff;
  width: 360rpx;
  height: 80rpx;
  line-height: 80rpx;
  background:#1E1A19;

  color: #fff;
  font-size: 32rpx;
  border-radius: 80rpx;
}

.set_content {
  padding: 50rpx 40rpx 60rpx 40rpx;
  font-size: 32rpx;
  color: #101010;
}

.set_box {
  background: #fff;
  padding: 40rpx;
  border-radius: 6rpx;
}

.set_box textarea {
  background: #f2f2f2;
  width: 100%;
  height: 168rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.set_box .set_list {
  padding: 25rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
}

.set_box .set_list .title {
  width: 50%;
}

.set_box .upload-box {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}


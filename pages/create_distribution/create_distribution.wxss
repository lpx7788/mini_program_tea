  padding: 25rpx 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
} */

 .set_box .set_list:last-child {
  border-bottom: none;
} 

.set_box .set_list input {
  text-align: right;
  color: #fe7757;
  padding-right: 20rpx;
}

.set_box .btn {
  margin-top: 20rpx;
  background: #fff;
  font-size: 28rpx;
  border: none;
  color: #bbb;
}

.mt20 {
  margin-top: 40rpx;
}

 .preview-image {
  width: 100% !important;
   height: 0; 
   display: block !important;
} 

.choose-main-image {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #e5e5e5;
  font-size: 40rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.choose-main-image.hide {
  opacity: 0;
}

.preview-main-image {
  width: 160rpx;
  height: 160rpx;
}

page {
  background: #f8f8f8;
  font-size: 28rpx;
  color: #333;
}

.list {
  background: #fff;
  border-top: 2rpx solid #e5e5e5;
}

.list .item {
  display: flex;
  justify-content: space-between;
  height: 110rpx;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 34rpx;
}

.list .item:last-child {
  border-bottom: none;
}

.list .left {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.list .left .date {
  font-size: 24rpx;
  color: #bbb;
}

.list .right {
  display: flex;
  align-items: center;
  color: #1E1A19;
}
.my_count_tit{
  padding: 100rpx 140rpx;
  background:linear-gradient(0deg,rgba(31,22,19,0.95),rgba(46,40,39,0.95));
  color: #fff;

}
.my_count_tit .jifen{
  width: 100%;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.my_count_tit .text{
  margin-top: 20rpx;
}
.my_count_tit image{
  height: 40rpx;
  width: 40rpx;
  vertical-align: bottom;
}
.my_count_tit .t1{
  font-size: 32rpx;

}
.my_count_tit .t1 text{
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 5rpx;
}
.my_count_tit .t2{
  font-size: 40rpx;
}
.navTextStyle{
  border-color: #FFDA7F !important;

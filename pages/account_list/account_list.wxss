  padding: 5rpx 20rpx;
}
.variety_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.variety_attr_box button{
  width: 80%;
  margin:0 auto;
  background: #3C3C3C;
  color: #fff;
}

.variety_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;

  height: 300rpx;
  font-size: 30rpx;

}
.variety_attr_box_in{
  padding: 30rpx;
}

